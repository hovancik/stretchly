{
  "name": "stretchly",
  "version": "0.4.0",
  "description": "break time reminder app",
  "engines": {
    "node": "6.5.0"
  },
  "scripts": {
    "start": "electron ./app --enable-logging --remote-debugging-port=9222",
    "dev": "NODE_ENV='development' npm run start",
    "postinstall": "install-app-deps",
    "pack-all": "build --dir -mwl --x64 --ia32",
    "dist-all": "build -mwl --x64 --ia32",
    "pack": "build --dir",
    "dist": "build",
    "test": "mocha tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hovancik/stretchly.git"
  },
  "keywords": [
    "stretchly",
    "break",
    "time",
    "reminder"
  ],
  "author": "Jan Hovancik <conta.srdr@gmail.com>",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/hovancik/stretchly/issues"
  },
  "homepage": "https://hovancik.net/stretchly",
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "electron": "^1.4.5",
    "electron-builder": "^8.5.3",
    "mocha": "^3.1.2",
    "spectron": "^3.4.0"
  },
  "build": {
    "appId": "net.hovancik.stretchly",
    "category": "public.app-category.healthcare-fitness",
    "productName": "stretchly",
    "dmg": {
      "icon": "build/icon.icns",
      "iconSize": 128,
      "contents": [
        {
          "x": 355,
          "y": 125,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 155,
          "y": 125,
          "type": "file"
        }
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "sh",
        "freebsd",
        "pacman",
        "tar.xz",
        "tar.gz"
      ]
    },
    "win": {
      "target": [
        "squirrel",
        "nsis",
        "7z",
        "zip"
      ],
      "msi": true
    }
  },
  "standard": {
    "globals": [
      "it",
      "describe",
      "beforeEach",
      "afterEach",
      "Audio",
      "fetch",
      "Notification"
    ]
  }
}
